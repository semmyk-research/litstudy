url = {https://www.sciencedirect.com/science/article/pii/B9780323911511000149},
author = {Razin {Farhan Hussain} and Ali Mokhtari and Ali Ghalambor and Mohsen {Amini Salehi}},
keywords = {Cyber security, Information technology (IT), Operational technology (OT), Vulnerability of data & system, Malware, Ransomware, Blockchain, Human-machine interaction, Machine-machine interaction},
abstract = {The advancements in both hardware and software technologies have transformed the oil and gas a fully-automated and machine-dependent industry. Although this digital transformation improves the production efficiency, it can potentially create various forms of vulnerability and side-effects that can lead to disastrous events, such as toxic gas emission, fire hazards, and oil spills. In addition, the rapid change in the technologies creates doors to hack into the information technology (IT) platforms. Especially, the bridge between the IT and operational technology (OT) platform increases cyber-threats to the oil and gas operations. Hence, while developing smart technology for oil and gas, system engineers need to consider or beware of the downside of smart solutions. As such, the new and existing smart solutions should incorporate improved security techniques to enable the system's robustness. Moreover, the potential side-effects of smart solutions can hinder the production efficiency and become counter-productive. Accordingly, this chapter is dedicated to exploring the potential threats and side-effects of smart solutions and introducing possible solutions for these threats, so that we can have a robust and secure smart oil and gas industry.}
}
@article{VANHILTEN2022107291,
title = {5G in agri-food - A review on current status, opportunities and challenges},
journal = {Computers and Electronics in Agriculture},
volume = {201},
pages = {107291},
year = {2022},
issn = {0168-1699},
doi = {https://doi.org/10.1016/j.compag.2022.107291},
url = {https://www.sciencedirect.com/science/article/pii/S0168169922006032},
author = {Mireille {van Hilten} and Sjaak Wolfert},
keywords = {6G, Connectivity, Agriculture, Food systems, Digital transformation},
abstract = {Autonomous tractors, spraying drones, robotics and fully autonomous farms are possible outcomes of the digital transformation trend in agriculture and food systems which is fostered by continuous technological advancement and the increasing connectivity capacity. These futuristic scenarios will be unlocked by 5G connectivity, the next step after 4G, because it enables high data transfer volumes and low latency which can lead to many beneficial outcomes for technology applications in agri-food, such as Internet of Things (IoT) and Blockchain. Considerable progress is seen in the 5G ecosystem around the world, from South Korea to Australia and Europe. This review presents the opportunities and challenges of 5G in agri-food. The six most compelling use cases of 5G in agri-food at this moment from different parts of the world are in Brazil, the Netherlands, South Korea and the United Kingdom. The future of 5G in agri-food will depend on a number of enabling factors including interoperability, data governance and security, new business models, policy changes, and innovative ecosystems. The baseline scenario of connectivity and infrastructure for a region or country is determined by the dimensions of 5G aggregation-, cyber physical management- and decision-making levels, which guide future 5G applications in agri-food. Agriculture technology collaboration across the private and public sector and ecosystem development are the first steps for all countries to make progress towards large scale uptake of 5G in agri-food.}
}
@article{MONSHIZADEH2023108658,
title = {Developing an industry 4.0 readiness model using fuzzy cognitive maps approach},
