url = {https://www.sciencedirect.com/science/article/pii/B9780081022955108108},
author = {Denise M. Carter},
keywords = {Cyberculture, Cyberspace, Data body, Media convergence, Metadata, Surveillance in cyberspace},
abstract = {This article revisits and updates the definitions of cyberspace and cyberculture put forward by Bell in 2009. Beginning with the earliest mention of cyberspace in Gibson's 1984 novel, the article identifies some of the problems of defining the constantly shifting and fluid space that is cyberspace. Cyberspace is not a single simple space, and cyberculture is not a single homogeneous culture. The cultural practices and social organization within cyberspace are both individual and at the same time global in nature. In fact cyberspace is the ultimate postmodern concept because it is socially determined and constructed by the billions of individuals who go there and are connected to each other. At the same time those billions of individuals are constantly being tracked, measured, classified, and recorded in millions of bytes of metadata. This leads to the creation of an individualized “data body” for each one of us. Constant surveillance and tracking allow a range of both official and unofficial agencies to gain insights into our daily and hourly movements and activities. Cyberspace is everywhere, and approaches to its study are many and varied as the updated list illustrates. The chapter ends by picking out the theme of cyberterrorism to illustrate how investigating routinized social practices in relation to the globally recognized locale of cyberspace play out.}
}
@article{ELIA2020119791,
