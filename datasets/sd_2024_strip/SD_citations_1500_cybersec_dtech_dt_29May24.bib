@incollection{BURRY20223,
title = {Chapter 1 - A new agenda for AI-based urban design and planning},
editor = {Imdat As and Prithwish Basu and Pratap Talwar},
booktitle = {Artificial Intelligence in Urban Planning and Design},
publisher = {Elsevier},
pages = {3-20},
