author = {Kaoswi K. Shih and Adrienne B. Arechiga and Xi Chen and Diana L. Urbauer and Aline Rozman {De Moraes} and Ashley J. Rodriguez and Lisa Thomas and Penny A. Stanton and Eduardo Bruera and David Hui},
